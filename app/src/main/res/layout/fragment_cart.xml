<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relative"
    android:background="@drawable/custom_background"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:padding="5dp"
        android:id="@+id/recyclerviewGioHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/linearlayoutWarm"
        android:layout_below="@+id/recyclerviewGioHang"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/removecart"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>
    <TextView
        android:gravity="center"
        android:text="Bạn chưa có sản phẩm nào trong giỏ hàng"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/tvWarm"
        android:textColor="#FF0202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/thanhtoan"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#000000"
                android:text="Tổng cộng:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#FF0606"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/TongTien"
                android:text="0 đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/button_thanhtoan"
            android:id="@+id/btnThanhToan"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Thanh toán"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
</RelativeLayout>