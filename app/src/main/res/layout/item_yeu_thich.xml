<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_yeuthich"
    android:layout_marginBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_gravity="center"
        android:id="@+id/imgDaYeu"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        app:siRadius="9dp"
        app:siBorderWidth="6dp"
        android:padding="3dp"
        app:siBorderColor="#21B828"
        android:layout_marginBottom="2dp"
        android:layout_width="200dp"
        android:layout_height="200dp">
    </com.github.siyamed.shapeimageview.RoundedImageView>
    <LinearLayout
        android:background="@drawable/bg_tbar"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="Chuot gaming Fantech Blast x7"
            android:id="@+id/tvTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Giá: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvGia"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#E64A19"
                android:text="138.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Mã giảm giá: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvGiamGia"
                android:textSize="15sp"
                android:textColor="#EB0505"
                android:text="Không có mã giảm giá"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/ic_star_green"
                android:id="@+id/deleteYeuThich"
                android:textStyle="bold"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>